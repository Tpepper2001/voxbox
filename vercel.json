{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "framework": "static",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*.js"
    }
  ],
  "env": [
    "GEMINI_API_KEY"
  ],
  "functions": {
    "api/synthesize.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
